{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "NodeNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true
  },
  "typeRoots" : [
    "./typings",
    "@types"
  ],
  "include": [
    "src/**/*.ts",
    "index.ts",
    ".stryker-tmp/**/*.ts"
  ],
  "ts-node": {
    "transpileOnly": true
  }
}
