{
  "formatter": "@commitlint/format",
  "rules": {
    "scope-enum": [2, "always", [
      "ci",
      "framework",
      "tools"
    ]],
    "type-enum": [2, "always", [
      "bug",
      "feature",
      "refactor"
    ]],
    "signed-off-by": [0, "never"],
    "trailer-exists": [0, "never"],
    "references-empty": [2, "never"]
  },
  "helpUrl": "https://idrinth-api-ben.ch/contributing/",
  "parserPreset": {
    "parserOpts": {
      "referenceActions": [ "closes", "fixes", "resolves", "refs" ]
    }
  }
}
